# =======================
# Server
# =======================
PORT=8080
LOG_LEVEL=info

# Logging output: stdout | file | both
LOG_OUTPUT=stdout
# Used when LOG_OUTPUT is file or both
LOG_FILE_PATH=./logs/ads-analyzer.log
LOG_FILE_MAX_SIZE=50         # MB
LOG_FILE_MAX_BACKUPS=5
LOG_FILE_MAX_AGE=28          # days
LOG_FILE_COMPRESS=true

# =======================
# Metrics
# =======================
METRICS_ENABLED=true         # expose /metrics and record metrics

# =======================
# Fetcher
# =======================
FETCH_TIMEOUT=5s
HTTP_FALLBACK=true           # try http://<domain>/ads.txt if https fails

# =======================
# Cache
# =======================
CACHE_BACKEND=memory         # memory | redis
CACHE_TTL=10m

# Redis settings (only used when CACHE_BACKEND=redis)
REDIS_ADDR=127.0.0.1:6379
REDIS_PASSWORD=
REDIS_DB=0

# =======================
# Rate limit (token bucket per client)
# =======================
RATE_PER_SEC=10              # tokens added per second
RATE_BURST=20                # max tokens (burst capacity)

# =======================
# Batch
# =======================
BATCH_WORKERS=8